    <div class="pt-2">
        <p class="font-semibold">Item Description</p>
        <p class="font-semibold text-gray-400 text-center pt-5 pb-7">
          <%= line_item.menu_categories_item.description %>
        </p>
       
    </div>
</div>

  <% end %>
      
  </div>
  <div class="flex mt-20 justify-end">
    
    <div>
    <p class="text-3xl font-semibold text-center"> Total Order Price :  <span class="font-bold text-red-500"><%= @totalPrice %></span></p>
    <div class="flex">
      <%= button_to "Cancel Order", clear_cart_orders_path, method: :post , class: "mr-2 w-40 px-3 py-2 mt-10 self-center text-white bg-red-500  rounded-md focus:bg-red-600 hover:bg-red-400 focus:outline-none cursor-pointer " , method: :delete%>

      <%= button_to "Place Order", orders_path, method: :post , class: "w-40 px-3 py-2 mt-10 self-center text-white bg-red-500  rounded-md focus:bg-red-600 hover:bg-red-400 focus:outline-none cursor-pointer " %></div>
    
  </div>
  </div>

</div>

