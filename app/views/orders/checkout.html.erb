  <div class="flex flex-wrap">
   <% @cart.foodcarts_items.each do |line_item| %>
   <div class="w-72 p-8 bg-white text-center rounded-2xl shadow border-2 m-7">
    <h1 class="text-black font-semibold text-1xl"><%= line_item.menu_categories_item.name %></h1>
    <p class="pt-2 tracking-wide">
        <span class="text-gray-400 align-top">â‚¹</span>
        <span class="text-3xl font-semibold"><%= line_item.menu_categories_item.price.to_i * line_item.quantity.to_i %></span>
