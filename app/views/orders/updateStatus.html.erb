<div class="flex pt-10 pb-5 align-middle justify-between">
    <!-- Top NavBar -->
    <div class="flex flex-1">
        <svg
        class="w-10 mr-2"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        />
      </svg>
      <h1 class="text-4xl font-bold">Update Order Status</h1>
    </div>
  
    <%= link_to "All Order", orders_path, class: "px-6 py-2 text-white
                      bg-red-500 rounded-md focus:bg-red-600 hover:bg-red-400 focus:outline-none
                      cursor-pointer " %>
  
    <br />
  </div>
              <div class="m-7">
                 <%= simple_form_for(@order) do |f| %>
                      <div class="mb-6">
                          <label for="email" class="block mb-2 text-sm text-gray-600 dark:text-gray-400">Order Number</label>
                          <%= f.input :id, label: false, input_html: { class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-gray-100 focus:border-gray-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" } %>
                      </div>
                  
                       <div class="mb-6">
                          <label for="email" class="block mb-2 text-sm text-gray-600 dark:text-gray-400">Select Order Status</label>
                          <%= f.input :completed, :collection => ["Completed", "Incomplete"], :as => :select, label: false, placeholder: "In-Active",
                                                 input_html: { class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-gray-100 focus:border-gray-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" },
                                                 value: "Active" %> 
                      </div>
  
                      <div class="mb-6">
                          <%= f.button :submit, "Update Order", class: "w-full px-3 py-4 text-white bg-red-500  rounded-md focus:bg-red-600 hover:bg-red-400 focus:outline-none cursor-pointer" ,method: :put %>
                      </div>
                 <% end %>
              </div>