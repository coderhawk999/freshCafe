<h1> users </h1>

<%= simple_form_for @user do |f| %>
    <%= f.input :name, input_html: { class: "inout" }, label_html: { class: "label" } %>
    <%= f.input :email, input_html: { class: "inout" }, label_html: { class: "label" } %>
    <%= f.input :password, input_html: { class: "inout" }, label_html: { class: "label" } %>
    <%= f.input :is_admin, :collection => ["Admin", "Clerk"], :as => :select, label: "Select Role" %> 

    <%= f.submit "Submit", disable_with: "Submiting..." %>

<% end %>
